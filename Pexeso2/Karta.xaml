<UserControl x:Class="Pexeso.Karta"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="64" d:DesignWidth="64">
    
    <Grid x:Name="LayoutRoot" Background="White">
        <Grid.Resources>
            <Style TargetType="Button">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate>
                            <Grid>
                                <Rectangle Fill="{TemplateBinding Button.Background}" Stroke="Black" RadiusX="5" RadiusY="5" />
                                
                            </Grid>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </Grid.Resources>

        <Button Content="Button" Height="Auto" HorizontalAlignment="Stretch" Margin="0,0,0,0" Name="button1" VerticalAlignment="Stretch" Width="Auto" />
    </Grid>
    
</UserControl>
